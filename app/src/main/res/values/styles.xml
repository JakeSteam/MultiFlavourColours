<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/toolbarColour</item>
    </style>

    <style name="headerText" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/headerBackground</item>
        <item name="android:textColor">@color/headerText</item>
    </style>

    <style name="bodyText" parent="headerText">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/bodyBackground</item>
        <item name="android:textColor">@color/bodyText</item>
    </style>

</resources>
